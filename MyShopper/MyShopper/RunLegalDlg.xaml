<Window x:Class="MyShopper.RunLegalDlg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyShopper"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" 
        Title="Legal Notice:"
        Height="300" Width="300" Background="LightGray" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Image x:Name="imgLegal" Height="150" Width="280" Loaded="imgLegal_Loaded"></Image>
            <ScrollViewer x:Name="scrollViewer" Height="110" Width="280" VerticalScrollBarVisibility="Hidden">
                <TextBlock Name="tbLegalNotice" TextWrapping="Wrap" Margin="5"></TextBlock>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
